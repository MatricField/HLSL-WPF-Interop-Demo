<Window x:Class="HLSLWpfInterop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HLSLWpfInterop"
        mc:Ignorable="d"
        x:Name="_MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:DataContext/>
    </Window.DataContext>
    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Effects}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Grid.Column="1"
                           Effect="{Binding}"
                           Source="{Binding DataContext.DisplayImage, RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}}"
                           Margin="5 5 5 5"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>
